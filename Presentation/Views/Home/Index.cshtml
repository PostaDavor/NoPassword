@model Presentation.ViewModels.vmUserLogin

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-md-12">
            <h2>Please log in</h2>
        </div>
    </div>
    <div class="row">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            @Html.Label("Username/Email", htmlAttributes: new { @class = "control-label" })
        </div>

        <div>
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })<br />
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>


        <div>
            @Html.Label("Password", htmlAttributes: new { @class = "control-label" })
        </div>

        <div>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })<br />
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div>
            <input type="submit" value="Log In" class="button-confirm" />
        </div>
    </div>

}

